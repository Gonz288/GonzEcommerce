<div class="container signUp-container">
    <div class="card" style="max-width: 690px; padding:25px;">
        <h2 class="text-center mb-4">Sign Up</h2>
        <form class="row g-0" action="/signup" method="POST">
            <div class="col-md-6 mb-3 px-1">
                <label for="firstname" class="form-label mx-1">First Name</label>
                <input type="text" name="firstname" class="form-control">
            </div>
            <div class="col-md-6 mb-3 px-1">
                <label for="lastname" class="form-label mx-1">Last Name</label>
                <input type="text" name="lastname" class="form-control">
            </div>
            <div class="mb-3 px-1">
                <label for="email" class="form-label mx-1">Email</label>
                <input type="email" name="email" class="form-control">
            </div>
            <div class="col-md-6 mb-3 px-1">
                <label for="age" class="form-label mx-1">Age</label>
                <input type="number" name="age" class="form-control">
            </div>
            <div class="col-md-6 mb-3 px-1">
                <label for="admin" class="form-label mx-1">Admin</label>
                <select class="form-select" name="admin">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
            </div>
            <div class="mb-3 px-1">
                <label for="password" class="form-label mx-1">Password</label>
                <input type="password" name="password" class="form-control">
            </div>
            <div class="mb-3 px-1">
                <label for="password" class="form-label mx-1">Repeat Password</label>
                <input type="password" name="confirm_password" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Create Account</button>
        </form>
    </div>
</div>