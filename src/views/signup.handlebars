<div class="container signUp-container">
    <div class="card" style="max-width: 690px; padding:25px;">
        <h2 class="text-center mb-4">Sign Up</h2>
            {{#if error}}
                <p class="text-danger fs-5 p-2 rounded" style="background-color: rgb(255, 179, 179);">{{error}}</p>
            {{/if}}
        <form class="row g-0" action="/signup" method="POST">
            <div class="col-md-6 mb-3 px-1">
                <label for="firstname" class="form-label mx-1 fw-semibold">First Name</label>
                <input type="text" name="firstname" class="form-control" placeholder="First Name">
            </div>
            <div class="col-md-6 mb-3 px-1">
                <label for="lastname" class="form-label mx-1 fw-semibold">Last Name</label>
                <input type="text" name="lastname" class="form-control" placeholder="Last Name">
            </div>
            <div class="mb-3 px-1">
                <label for="email" class="form-label mx-1 fw-semibold">Email</label>
                <input type="email" name="email" class="form-control" placeholder="Email">
            </div>
            <div class="mb-3 px-1">
                <label for="age" class="form-label mx-1 fw-semibold">Age</label>
                <input type="number" name="age" class="form-control" placeholder="Age">
            </div>
            <div class="mb-3 px-1">
                <label for="password" class="form-label mx-1 fw-semibold">Password</label>
                <input type="password" name="password" class="form-control" placeholder="Password">
            </div>
            <div class="mb-3 px-1">
                <label for="password" class="form-label mx-1 fw-semibold">Repeat Password</label>
                <input type="password" name="confirm_password" class="form-control" placeholder="Repeat Password">
            </div>
            <button type="submit" class="btn btn-dark fw-semibold" style="color: rgb(0, 219, 113)">Create Account</button>
        </form>
    </div>
</div>