<div class="container signIn-container">
    <div class="card">
        <h2 class="text-center mb-4">Sign In</h2>
        <form class="row g-0" action="/login" method="POST">
            <div class="mb-3">
                <label for="email" class="form-label mx-1">Email</label>
                <input type="email" name="email" class="form-control">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label mx-1">Password</label>
                <input type="password" id="password" name="password" class="form-control">
            </div>
            <div id="signUp" class="form-text mb-3">
                You don't have an account? <a href="signup">Create an account.</a>
            </div>
            <div class="form-text mb-3 text-end">
                <a href="/recoverPassword/sendEmail">Forgot Password</a>
            </div>
            <div class="form-text mb-3">
                <a href="/api/sessions/github">Login with GitHub</a>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>