<div class="container-lg mb-5">
    <!--Create Product-->
    {{#if user.admin}}
        <button type="button" class="btn btn-primary my-3" data-bs-toggle="modal" data-bs-target="#modalCreateProductAdmin"><i class="bi bi-pencil-square"></i> Create Product</button>
        <!-- Modal Create Product-->
        <div class="modal fade" id="modalCreateProductAdmin" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Create Product</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/api/products" method="POST" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Title</label>
                                <input type="text" class="form-control" name="title" required>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Description</label>
                                <input type="text" class="form-control" name="description" required>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Code</label>
                                <input type="text" class="form-control" name="code" required>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Price</label>
                                <input type="number" class="form-control" name="price" required>
                            </div>
                            <div class="mb-3">
                                <label for="status">Status:</label>
                                <select name="status" id="status">
                                    <option value="true" selected>True</option>
                                    <option value="false">False</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Stock</label>
                                <input type="number" class="form-control" name="stock" required>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Thumbnail</label>
                                <input type="file" class="form-control" name="thumbnail" required>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Category</label>
                                <input type="text" class="form-control" name="category" required>
                            </div>
                    </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button id="btnSend" type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {{else}} 
        {{#if user.premium}}
            <button type="button" class="btn btn-primary my-3" data-bs-toggle="modal" data-bs-target="#modalCreateProductPremium"><i class="bi bi-pencil-square"></i> Create Product</button>
            <!-- Modal Create Product-->
            <div class="modal fade" id="modalCreateProductPremium" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Create Product</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="/api/products" method="POST" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Title</label>
                                    <input type="text" class="form-control" name="title" required>
                                </div>
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Description</label>
                                    <input type="text" class="form-control" name="description" required>
                                </div>
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Code</label>
                                    <input type="text" class="form-control" name="code" required>
                                </div>
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Price</label>
                                    <input type="number" class="form-control" name="price" required>
                                </div>
                                <div class="mb-3">
                                    <label for="status">Status:</label>
                                    <select name="status" id="status">
                                        <option value="true" selected>True</option>
                                        <option value="false">False</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Stock</label>
                                    <input type="number" class="form-control" name="stock" required>
                                </div>
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Thumbnail</label>
                                    <input type="file" class="form-control" name="thumbnail" required>
                                </div>
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Category</label>
                                    <input type="text" class="form-control" name="category" required>
                                </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button id="btnSend" type="submit" class="btn btn-primary">Create</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        {{/if}}
    {{/if}}

    <!--Product Slider-->
    {{#if error}}
        <p class="text-danger error rounded p-2">{{error}}</p>
    {{/if}}
    {{#if success}}
        <p class="text-success success rounded p-2">{{success}}</p>
    {{/if}}
    <h3 class="pcolor">Featured Products:</h3>
    <swiper-container class="mySwiper" navigation="true" slides-per-view="auto"
        space-between="30" free-mode="true" loop="false">
        {{#each object.payload}}
            <swiper-slide class="similarProducts">
                <div class="card card-product text-start border border-secondary">
                    <img src="{{this.thumbnail}}" alt="{{this.title}}">
                    <div class="card-body bg-dark">
                        <h5 class="card-title text-white">{{this.description}}</h5>
                        <p class="fs-4 pcolor fw-semibold">${{this.price}}</p>
                    </div>
                    <div class="card-footer bg-dark" style="background-color: none; background:none;">
                        <button class="btn btn-products"><a href="/api/products/{{this.id}}" class="nav-link"> View more </a></button>
                    </div>
                </div>
            </swiper-slide>
        {{/each}}
    </swiper-container>
</div>